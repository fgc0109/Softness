/* order/pages/refund/submitRefund/submitRefund.wxss */
page {
  background: #F4F4F4;
  position: relative;
}

.refund-contain {
  padding: 24rpx;
  padding-bottom: 200rpx;
}

.refund-common {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.refund-common>view:nth-of-type(1) {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.refund-common>view:nth-of-type(1)>text:nth-of-type(2) {
  color: #FB322F;
}

.refund-product {
  display: flex;
  flex-direction: column;
}

.product-image {
  width: 192rpx;
  height: 138rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-desc {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.product-info {
  width: 446rpx;
  margin-left: 16rpx;
  display: flex;
  justify-content: space-between;
}

.product-info-left {
  display: flex;
  flex-direction: column;
}

.product-info-left>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  width: 300rpx;
  max-height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.product-info-left>text:nth-of-type(2) {
  color: #999999;
  font-size: 24rpx;
}

.product-info-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.product-info-right>text:nth-of-type(1) {
  color: #999999;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.product-info-right>text:nth-of-type(2) {
  color: #999999;
  font-size: 20rpx;
}

.refund-choose {
  padding-bottom: 30rpx;
}

.choose-contain {
  display: flex;
  flex-direction: column;
}

.choose-item {
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.choose-item:nth-of-type(2) {
  margin-top: 26rpx;
}

.choose-item:nth-of-type(3) {
  margin-top: 26rpx;
}

.choose-item-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.choose-item-right {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 40rpx;
}

.choose-item image {
  width: 40rpx;
  height: 40rpx;
}

.service-fee-title {
  color: #333333;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.service-fee-value {
  color: #999999;
  font-size: 28rpx;
  margin-right: 24rpx;
  height: 40rpx;
}

.active-fee-value {
  color: #FB322F;
}

.refund-reason {
  display: flex;
  height: 40rpx;
  justify-content: space-between;
}

.refund-reason image {
  width: 20rpx;
  height: 48rpx;
  padding-top: 2rpx;
}

.reason-select {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 28rpx;
}

.reason-select image {
  margin-left: 16rpx;
}

.refund-desc {
  display: flex;
  flex-direction: column;
}

.desc-contain {
  width: 100%;
  display: flex;
}

.desc-textarea {
  width: 100%;
  display: flex;
  height: 176rpx;
  border: 2rpx solid #D6D6D6;
  border-radius: 12rpx;
  font-size: 24rpx;
  padding: 24rpx;
}

.submit-btn-contain {
  width: 100%;
  height: 128rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn {
  width: 702rpx;
  height: 80rpx;
  background: #36a6fe;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #ffffff;
}

.action-sty {
  position: relative;
}

.reson-action {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 668rpx;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.reson-action>image:nth-of-type(1) {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  width: 32rpx;
  height: 32rpx;
}

.reason-title {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #E4E4E4;
}

.option-contain {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}

.option-item {
  width: 702rpx;
  height: 87.5rpx;
  border-bottom: 1rpx solid #E4E4E4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-item text {
  color: #333333;
  font-size: 28rpx;
  font-weight: 400;
}

.option-item image {
  width: 40rpx;
  height: 40rpx;
}

.reason-btn {
  width: 702rpx;
  height: 80rpx;
  background: #36a6fe;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #ffffff;
  margin-top: 24rpx;
}

.select-input {
  display: inline-block;
  width: 160rpx;
}

.input-flex {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.symbol-sty {
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


/*
 选择数量
*/
.dialog-count {
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.dialog-btn {
  margin-top: 23rpx;
  margin-left: 20rpx;
  width: 702rpx;
  height: 80rpx;
  background: #36A6FE;
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 24rpx;
  right: 20rpx;
}

.count-choose {
  display: flex;
  justify-content: center;
  align-items: center;
}

.count-btn {
  width: 40rpx;
  height: 40rpx;
}

.count-value {
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  font-size: 32rpx;
  margin: 0 20rpx;
  font-weight: normal !important;
}

.refund-select-main {
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.count-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 32rpx 28rpx 0 28rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #F4F4F4;
  font-weight: bold;
  font-size: 32rpx;
}

.count-main-label>text:nth-of-type(1) {
  color: #333333;
}

.count-main-label>text:nth-of-type(2) {
  color: #FB322F;
}