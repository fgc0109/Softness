/* personal/pages/transferPay/transferPay.wxss */
page {
  background: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.transfer-pay {
  width: 702rpx;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 20rpx;
  padding-top: 20rpx;
}

.order-info {
  width: 100%;
  height: 100rpx;
  border-bottom: 2px solid #f4f4f4;
  display: flex;
  flex-direction: column;
}

.order-desc {
  color: #333333;
  font-size: 28rpx;
  margin-left: 24rpx;
  font-weight: bold;
}

.order-price {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  margin-top: 6rpx;
}

.order-price>text:nth-of-type(1) {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.order-price>text:nth-of-type(2) {
  color: #FF6D27;
  font-size: 32rpx;
}

.back-info {
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
}

.back-info>text:nth-of-type(1) {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.back-table {
  margin-top: 22rpx;
  display: flex;
  flex-direction: column;
  border-top: 2rpx solid #E5E5E5;
}

.back-item {
  height: 56rpx;
  display: flex;
  border: 2rpx solid #E5E5E5;
  border-top: none;
}

.back-item>text:nth-of-type(1) {
  width: 140rpx;
  color: #333333;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #E5E5E5;
}

.back-item>view:nth-of-type(1) {
  display: 450rpx;
  color: #333333;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 20rpx;
}

.transfer-info {
  padding: 0 24rpx;
}

.transfer-title>text:nth-of-type(1) {
  color: #FF6D27;
}

.transfer-title>text:nth-of-type(2) {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.transfer-upload {
  margin-top: 20rpx;
  width: 606rpx;
  height: 358rpx;
  background: #ffffff;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
}

.upload-img {
  width: 100% !important;
  height: 100% !important;
}

.transfer-upload image {
  width: 80rpx;
  height: 80rpx;
}
.pdf-image{
  width: 160rpx !important;
  height: 160rpx !important;
}
.transfer-upload text {
  color: #666666;
  font-size: 24rpx;
  margin-top: 22rpx;
}

.reminder {
  margin-top: 40rpx;
  padding: 0 24rpx 20rpx 24rpx;
  color: #333333;
  display: flex;
  flex-direction: column;
}

.reminder>text:nth-of-type(1) {
  font-size: 28rpx;
  font-weight: bold;
}

.reminder>text:nth-of-type(2) {
  font-size: 24rpx;
  margin-top: 20rpx;
  line-height: 36rpx;
}

.submit-btn {
  margin-top: 34rpx;
  margin-bottom: 40rpx;
  width: 702rpx;
  height: 68rpx;
  background: linear-gradient(126deg, #82d6f6 0%, #0c89e9 98%);
  border-radius: 34px;
  color: #FFFFFF;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.copy_text {
  display: inline-block;
  margin-left: 16rpx;
  background: #F1F4F9;
  padding: 0 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  font-weight: normal !important;
}