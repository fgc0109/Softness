/* personal/pages/personalAuthentication/selectPage/selectPage.wxss */
page {
  background: #F4F4F4;
}

.select-page {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
}

.select-page-item {
  background: #ffffff;
  height: 160rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-page {
  display: flex;
}

.left-page image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 32rpx 0 40rpx;
}

.page-info {
  display: flex;
  flex-direction: column;
}

.page-info>text:nth-of-type(1) {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.page-info>text:nth-of-type(2) {
  color: #999999;
  font-size: 24rpx;
}

.right-pointer {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
  margin-right: 40rpx;
}