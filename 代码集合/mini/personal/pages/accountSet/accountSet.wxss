/* personal/pages/accountSet/accountSet.wxss */
page {
  background: #F5F7FB;
}

.account-set {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  background: #ffffff;
}

.account-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333333;
  font-size: 28rpx;
  border-bottom: 2rpx solid #F4F4F4;
  padding: 0 24rpx;
}

.active-account-item{
  border-top: 16rpx solid #F4F4F4;
}

.account-info {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx !important;
  color: #999999;
  height: 30rpx;
  margin-right: 40rpx;
}

.pointer-right {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #999999;
  border-right: 2rpx solid #999999;
  transform: rotate(45deg);
  margin: 4rpx 20rpx 0;
}
.out-btn{
  width: 90%;
  margin: 100rpx 5%;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  background: rgb(75, 77, 112);
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
}
.certified{
  color: #36A6FE;
}