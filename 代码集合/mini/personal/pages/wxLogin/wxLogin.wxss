/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

.logo-contain {
  position: absolute;
  top: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.logo {
  margin-bottom: 34rpx;
  width: 136rpx;
  height: 136rpx;
}

.logo-contain text {
  font-weight: bold;
  color: "#3A414B"
}

.phoneBtn {
  margin-top: 39rpx;
  width: 100%;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}
.to-reg{
  position: absolute;
  right: 0;
  bottom: 0;
  color: #3AA6FB;
  font-size: 28rpx;
}
.right-blue{
  color: #3AA6FB;
  text-align: right;
}
.footer {
  position: absolute;
  display: flex;
  font-size: 24rpx;
  color: #C4C4C4;
  font-family: "HiraginoSansGB-W3";
  bottom: 26px
}

.footer-blue {
  color: #3AA6FB;
}

.login-style {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/*
  手写提示框
*/
.tip-dialog {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.tip-main {
  width: 600rpx;
  height: 380rpx;
  background: #ffffff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tip-desc {
  width: 450rpx;
  height: 380rpx;
  color: #a09c9c;
  text-align: center;
  margin-top: 100rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}

.tip-btn {
  width: 100%;
  display: flex;
  border-top: 2rpx solid#f1f1f1;
  height: 100rpx;
  border-bottom-left-radius: 30rpx !important;
  border-bottom-right-radius: 30rpx !important;
}
.tip-btn button{
  height: 72rpx !important;
  line-height: 72rpx !important;
  font-weight: 500 !important;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 28rpx;
}
button[size='mini'] {
  width: auto;
  padding: 0;
}
.canncel-btn {
  border-right: 2rpx solid #f1f1f1;
  border-bottom-left-radius: 30rpx !important;
  color: #999999;
}
.confirm-btn {
  border-bottom-right-radius: 30rpx !important;
  color: #3AA6FB;
}
.popup{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
}
.mask{
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
}
.popup_main{
  position: fixed;
  width: 90%;
  max-height: 700rpx;
  top: 20%;
  left: 0;
  right: 0;
  /* bottom: 0; */
  margin: auto;
  background: #fff;
  border-radius: 12rpx;
}
.pop-title{
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 2rpx solid #eee;
  position: relative;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 36rpx;
}
.close-ico{
  position:absolute;
  width: 30rpx;
  height: 30rpx;
  right: 24rpx;
  top: 24rpx;  
}
.user-item{
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
}
.user-item image{
  width: 24rpx;
  height: 24rpx;
  line-height: 40rpx;
}
.user-item text{
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
  line-height: 40rpx;
}
.submit-btn{
  width: 80%;
  line-height: 72rpx;
  text-align: center;
  margin: 60rpx auto;
  font-size: 24rpx;
  border-radius: 10rpx;
  background: #36a6fe;
  color: #fff;
}
.submit-able-btn{  
  width: 520rpx !important;
  margin: 60rpx auto;
  background: #36a6fe;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}
.phone{
  width: 90%;
  margin: 20rpx auto;
  border:2rpx solid #eee;
  height: 68rpx;
}
.input{
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  padding-left: 24rpx;
  color: #555;
}
.holder-style{
  color: #b4b4b4;
  font-size: 24rpx;
}
.swtich{
  color: #36a6fe;
  text-align: right;
  padding: 0 28rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}
.swtich text{
  padding: 12rpx 0;
}
.phoneError{
  color: #f20000;
  font-size: 24rpx;
  padding-left: 32rpx;
}
.please-tips{
  padding-left: 28rpx;
  font-size: 28rpx;
  color: #555;
}
.binded{
  color:#36a6fe !important;
}
.gray-txt{
