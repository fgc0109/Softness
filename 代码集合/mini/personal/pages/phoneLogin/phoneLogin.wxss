/* personal/pages/phoneLogin/phoneLogin.wxss */
.container{
  position: relative;
  width: 100%;
  /* min-height: 80vh; */
}
.logo{
  margin-top:100rpx;
  margin-bottom:29rpx;
  width:136rpx;
  height:136rpx;
}
.form{
  /* position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%); */
  width:686rpx;
  color:"#3A414B";
  font-size:28rpx
}
.text{
  font-weight: bold;
  color:"#3A414B"
}
.phone{
  margin: 36rpx 0;    
  display:flex;
  border-bottom: 1px solid #D9D9D9;
  padding:16rpx 0;
  align-items: center
}
.errorLogin{
  background: #f2f2f2;
  color: #999;
}
.check{
  margin-top:10rpx
}
.error{
  border-bottom: 1px solid red;
}
.input{
  padding:0 24rpx;
  color: #333;
  height: 48rpx;
  line-height: 48rpx;
}
.color3{
  color: #999 !important;
}
.check-input{
  width:200rpx
}
.form button[type='primary'][plain] {
  color: #36A6FE;
  border-color: #36A6FE;
}
.form button:not([size='mini']) {
  width: 190rpx;
  padding:10rpx;
  margin-right: 16rpx;
  font-size:24rpx
}
.agreement{
  font-size:24rpx;
  color:#999;
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  text-align: center;
}
.agreement-link{
  color:#36A6FE
}
.checkbox .wx-checkbox-input {
  width: 24rpx; /* 背景的宽 */
  height: 24rpx; /* 背景的高 */  
}
.checkbox .wx-checkbox-input-disabled {
  border-radius: 32rpx; /* 圆角 */
  width: 32rpx; /* 背景的宽 */
  height: 32rpx; /* 背景的高 */
  background: #f3f3f3;
  /* border: 1px solid rgba(201, 201, 201, 1); */
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #36A6FE;
  border:0;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 60%;
  height: 30%;
  border-left:2px solid #fff;
  border-bottom:2px solid #fff;
  content: '';
  transform:rotate(-45deg) translate(0,-120%);
}
.loginBtn{
  margin-top:90rpx;
  width: 670rpx !important;
  height: 80rpx;
  font-size: 30rpx;
  background: linear-gradient(to right, #55CAFE, #3A6DFB);
  color: #fff;
}
.phoneError{
  margin-top:-34rpx;
  padding:0;
  color:red;
  font-size:24rpx
}
.popup{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
}
.mask{
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
}
.popup_main{
  position: absolute;
  /* fixed; */
  width: 80%;
  max-height: 740rpx;
  top: 30%;
  left: 0;
  right: 0;
  /* bottom: 0; */
  margin: auto;
  background: #fff;
  border-radius: 12rpx;
}
.pop-title{
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 2rpx solid #eee;
  position: relative;
  color: #555;
  margin-bottom: 36rpx;
}
.close-ico{
  position:absolute;
  width: 30rpx;
  height: 30rpx;
  right: 24rpx;
  top: 24rpx;  
}
.note-text{
  font-size: 24rpx;
  color: #ff0000;
  margin: 0 24rpx;
}
.user-item{
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
}
.user-item image{
  width: 24rpx;
  height: 24rpx;
  line-height: 40rpx;
}
.fixed-btn{
  position: absolute;
  background: #fff;
  width: 100%;
  bottom: 0;
  right: 0;
  border-radius: 12rpx;
}
.scroll-item{
  max-height: 500rpx;
  /* min-height: 300rpx; */
  overflow: scroll;
  padding-bottom: 132rpx;
}
.relative-fix{
  position: relative;
}
.submit-btn{
  width: 80%;
  line-height: 72rpx;
  text-align: center;
  margin: 20rpx auto 28rpx auto;
  font-size: 24rpx;
  border-radius: 10rpx;
  background: #36a6fe;
  color: #fff;
}
.word-sty {
  width: 30%;
  height: 50rpx;
  font-size: 28rpx;
  color: #343535;
  display: inline-block;
}
.tab-sty {
  width: 100%;
  height: 50rpx;
  margin-top: 80rpx;
}
.tab-sty :first-child{
  margin-right: 60rpx;
}
.select-sty {
  font-size: 30rpx;
  color: #003333;
  font-weight: bold;
}