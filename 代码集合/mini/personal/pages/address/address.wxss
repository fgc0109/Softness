/* personal/pages/address/address.wxss */

.address {
  border-top: 16rpx solid #F4F4F4;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 18rpx 0 160rpx 0;
  display: flex;
  flex-direction: column;
}

.address-item {
  width: 100%;
  position: relative;
  display: flex;
  background: #FFFFFF;
  justify-content: center;
  align-items: flex-end;
}

.address-item-desc {
  width: 100%;
  display: flex;
  background: #FFFFFF;
  justify-content: flex-start;
  align-items: flex-end;
  border-bottom: 2rpx solid #e7e6eb;
  padding-bottom: 30rpx;
  margin: 0 24rpx;
}

.item-head {
  width: 48rpx;
  height: 48rpx;
  padding-bottom: 30rpx;
  position: relative;
}

.normal-desc {
  width: 100%;
  height: 100%;
  position: absolute;
  text-align: center;
  line-height: 48rpx;
  left: 0;
  color: #FF6D27;
  font-size: 24rpx;
}

.item-head-img {
  width: 48rpx;
  height: 48rpx;
}

.item-select-img {
  width: 32rpx;
  height: 32rpx;
}

.item-main {
  display: flex;
  flex-direction: column;
  margin: 26rpx 0rpx 0 24rpx;
  width: 520rpx;
}

.item-main-desc {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.desc-title {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 280rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.desc-phone {
  font-size: 24rpx;
  color: #999999;
  margin: 0 14rpx 0 16rpx;
}

.item-main-content {
  color: #333333;
  width: 100%;
  height: 70rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  line-height: 36rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc-default {
  width: 64rpx;
  height: 36rpx;
  background: #36a6fe;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #FFFFFF;
}

.item-foot {
  padding-bottom: 25rpx;
  margin-left: 63rpx;
}

.item-foot-img {
  width: 32rpx;
  height: 32rpx;
}

.address-add-bar {
  width: 100%;
  height: 148rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #FFFFFF;
  box-shadow: -3px -3px 4px 0px rgba(0, 0, 0, 0.03);
}

.add-btn {
  width: 702rpx;
  height: 68rpx;
  background: linear-gradient(126deg, #82d6f6 0%, #0c89e9 98%);
  border-radius: 34rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.add-disabled-btn {
  background: #ccc !important;
}

.btn-plus {
  margin-right: 20rpx;
  font-size: 40rpx;
}

.operate-contain {
  width: 750rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.common-btn-sty {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 24rpx;
}

.default-btn {
  background: #fdc41d !important;
  margin-right: 110rpx;
}

.delete-btn {
  background: #F2390B !important;
}