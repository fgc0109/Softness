/* personal/pages/authentication/authentication.wxss */

.content {
  padding: 24rpx;
}

.item {
  width: 100%;
  height: 80rpx;
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  color: #333333;
  margin-bottom: 24rpx;
  justify-content: space-between;
}

.item image {
  margin-left: 40rpx;
  width: 80rpx;
  height: 80rpx;
}

.item .link-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 40rpx
}

.account-type {
  color: #ffffff;
  display: inline-block;
  font-size: 18rpx;
  padding: 6rpx;
  letter-spacing: 1.4rpx;
  background: #fe9819;
  border-radius: 4rpx;
  text-align: center;
  margin-left: 8rpx;
}

.bg {
  width: 100%;
  height: 100vh;
  opacity: 0.25;
  background: #000000;
  position: fixed;
  top: 0;
  padding: 0 40rpx;
}

.dialog {
  box-sizing: border-box;
  width: 100%;
  padding: 0 24rpx;
  position: fixed;
  top: 25%;
  z-index: 999999;
}

.dialog-box {
  width: 100%;
  height: 410rpx;
  background: #ffffff;
  border-radius: 16rpx;
}

.dialog-title {
  width: 100%;
  height: 98rpx;
  background: #eef5f8;
  display: flex;
  border-radius: 16rpx 16rpx 0 0;
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
}

.dialog-title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 28rpx
}

.info {
  text-indent: 2em;
  font-size: 28rpx;
}

.btn {
  margin-top: 54rpx;
  justify-content: flex-end;
  font-size: 14px;
  text-align: center;
  line-height: 64rpx;

}

.btn-cancle {
  width: 136rpx;
  height: 64rpx;
  color: #36a6fe;
  background: #ffffff;
  border: 2rpx solid #36a6fe;
  border-radius: 8rpx;
}

.btn-next {
  width: 184rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #36a6fe;
  border-radius: 8rpx;
  color: #fff;
  margin-left: 24rpx
}

.audit-result {
  margin-top: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.result {
  width: 100%;
  font-family: Microsoft YaHei;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.justified {
  width: 80%;
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.top-50 {
  margin-top: 50rpx !important;
}

.gray-btn {
  background: #eef1f2 !important;
  color: #B4B4B4 !important;
}

.result-title {
  font-size: 32rpx;
  font-weight: 800;
  text-align: left;
  color: #333333;
  margin: 12rpx 0 40rpx 0;
}

.result-image {
  width: 320rpx;
  height: 222rpx;
}

.result-desc {
  margin: 0 24rpx;
  font-size: 24rpx;
  color: #4aa6fe;
}

.result div {
  width: 200rpx;
  height: 60rpx;
  background: #36a6fe;
  border-radius: 6rpx;
  line-height: 60rpx;
  text-align: center;
  color: #ffffff;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.result-info {
  color: #7B7B7B;
  font-size: 24rpx;
}

.result-info view:first-child {
  margin-bottom: 16rpx;
}

.result-btn {
  width: 100px;
  height: 30px;
  background: #36a6fe;
  border-radius: 3px;
  line-height: 30px;
  text-align: center;
  color: #ffffff;
  font-size: 12px;
  margin-top: 6px;
}

.operate-item input {
  color: #333333;
  width: 420rpx;
  height: 60rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid #cccc;
  border-radius: 10rpx;
}