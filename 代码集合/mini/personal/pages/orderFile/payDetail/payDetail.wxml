<!--personal/pages/orderFile/payDetail/payDetail.wxml-->
<wxs src="../../../../utils/common/filters.wxs" module="tools"></wxs>
<view class="class-order">
  <head title="提交订单"></head>
  <view class="order-body">
    <view class="goods-card">
      <view class="card-title">商品信息</view>
      <view class="goods-cont">
        <view>
          <image class="goods-img" src="{{imageUrl+fileDetail.fileImageUrl}}"></image>
          <image src="{{iconUrl[fileDetail.fileType]}}" mode="" class="icon-position"/>
        </view>
        <view class="goods-right">
          <view class="goods-desc">
            <view class="goods-title">{{fileDetail.fileName}}</view>
            <view class="goods-price">￥{{tools.filterAmount(fileDetail.amount)}}</view>
          </view>
          <view class="goods-pay">
            应付款：￥{{tools.filterAmount(fileDetail.amount)}}
          </view>
        </view>
      </view>
    </view>
    <pays checkedIndex="{{checkedIndex}}" bind:chooseIndex="chooseIndex"></pays>
  </view>
  <view class="bottom-handle">
    <view class="bottom-left"> 
      <view class="pay-price">合计：￥<text class="big-price">{{tools.filterAmount(fileDetail.amount)}}</text></view>
      <view class="flex deal-line" wx:if="{{!orderId}}">
        <image wx:if="{{checkDeal}}" src="/image/orders/checkd.png" catchtap="changeDeal"></image>
        <image wx:else src="/image/orders/uncheck_gray.png" catchtap="changeDeal"></image>
        <text class="check-note" catchtap="changeDeal">请阅读并勾选</text>
        <text class="check-note light-blue-txt" catchtap="toAgreement">《卧涛网交易服务协议》</text>
      </view>
    </view>
    <view wx:if="{{orderId}}" bindtap="toWxPay" class="pay-btn">立即支付</view>
    <view wx:else bindtap="checkLogin" class="pay-btn">提交订单</view>
  </view>
</view>
