/* personal/pages/openVip/openVip.wxss */
.class-wrap{
  width: 100%;
  height: 100vh;
  background: #F5F7FB;
  position: relative;
}
.open-cont{
  width: 92%;
  margin: 0 4%;
  padding-top: 210rpx;
}
.info-card{
  width: 100%;
  height: 336rpx;
  position: relative;
}
.info-card image{
  width: 100%;
  height: 336rpx;
  border-radius: 20rpx;
}
.mask{
  width: 100%;
  height: 336rpx;
  border-radius: 20rpx;
  background: #000;
  opacity: 0.2;
  position: absolute;
  left: 0;
  top: 0;
}
.validity{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
}
.pay-way {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-top: 24rpx;
}
.pay-title{
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.pay-desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.check-sty image {
  width: 32rpx;
  height: 32rpx;
}
.pay-img {
  display: flex;
}
.pay-img image {
  width: 48rpx;
  height: 48rpx;
}
.pay-img text {
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-left: 16rpx;
}
.pay-price{
  font-size: 28rpx;
}
.pay-price text{
  color: #FF6D27;
}
.big-price{
  font-size: 36rpx;
  font-weight: 600;
}
.deal-line{
  padding: 24rpx 0;
  align-items: center;
}
.check-note{
  font-size: 24rpx;
  color: #999;
}
.deal-line image{
  width: 28rpx;
  height: 28rpx;
  padding-right: 8rpx;
}
.bottom-handle{
  background: #fff;
  width: 92%;
  padding: 24rpx 4%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
}
.pay-btn{
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  border-radius: 40rpx;
  background: #36A6FE;
}