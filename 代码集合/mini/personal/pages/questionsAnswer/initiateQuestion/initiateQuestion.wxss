/* personal/pages/questionsAnswer/initiateQuestion/initiateQuestion.wxss */
.initiateQuestion{
  margin-top: 180rpx;
  padding: 30rpx;
}
.initiateQuestion-top{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.ruhetiwen{
  color: #36A6FE;
}
.tiwen{
  color: #000;
  font-weight: 700;
  display: flex;
  align-items: center;
}
.tiwen image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}

.input-class{
  height: 100rpx;
  border: 2rpx solid #36A6FE;
  margin-top: 30rpx;
  width: 100%;
}

.textword{
  font-size: 28rpx;
  float: right;
  color: #ccc;
}

.textarea-class{
  width: 100%;
  height: 500rpx;
  border: 2rpx solid #eaebef;
  margin-top: 60rpx;
}

.button-class{
  background: #36a6fe;
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  bottom: 80rpx;
  text-align: center;
  width: 90vw;
  padding: 25rpx 0;
  border-radius: 50rpx;
  margin: 0 auto;
  left: 5vw;
}

.dialog{
  width: 90vw;
  height: 70vh;
  position: fixed;
  top: 15vh;
  left: 5vw;
  z-index: 10001;
  background: #fff;
  border-radius: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.dialog-top{
  font-size: 36rpx;
  color: #000;
  font-weight: 700;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #eef5f8;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.dialog-top image{
  width: 36rpx;
  height: 36rpx;
}

.dialog-content{
  font-size: 28rpx;
  padding: 30rpx;
  color: #333;
  height: 70vh;
  overflow-y: auto;
}
.dialog-content view {
  line-height: 45rpx;
}
.dialog-content-title{
  font-weight: 700;
  color: #000;
  font-size: 30rpx;
}

.dialog-content-info image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.zhezhaoceng {
  background: rgba(0, 0, 0, 0.6);
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}