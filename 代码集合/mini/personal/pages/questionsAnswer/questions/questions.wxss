/* personal/pages/questionsAnswer/questions/questions.wxss */
.questions {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 180rpx;
  box-sizing: border-box
}

.filter-list {
  width: 100%;
  height: 88rpx;
  position: fixed;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9998;
  border-bottom: 2rpx solid #EAEBEF;
  background: #fff;
}

.filter-item {
  position: relative;
  width: 25%;
  height: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.filter-item:nth-of-type(4) {
  flex: 1.5 !important;
}

.item-title {
  color: #999;
  font-size: 28rpx;
}

.item-title-active {
  color: #333;
  font-weight: 600;
}

.item-lang {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
}

.item-lang-active {
  background: #36a6fe !important;
}
.note-num{
  position: absolute;
  top: 12rpx;
  right: 0;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  background-color: #FE3636;
  border-radius: 100rpx;
  /* padding: 2rpx 10rpx; */
  width: 44rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 2rpx solid #fff;
}

.questionsList{
  display: flex;
  flex-direction: column;
  margin-top: 88rpx;
}

/* 左滑删除 */
.custom_item{
  width: 100%;
  /* display: flex; */
  position: relative;
 }

 .remove{ 
  width: 160rpx; 
  height: calc(100% + 30rpx); 
  background-color: red; 
  color: white; 
  position: absolute; 
  top: 0; 
  right: -160rpx; 
  display: flex; 
  justify-content: center; 
  align-items: center; 
  margin-top: -30rpx;
 } 

.question-item{
  display: grid;
  grid-template-columns: 80% 20%;
  margin: 30rpx 30rpx 0 ;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #EAEBEF;
}

.question-item1{
  margin: 30rpx 30rpx 0 ;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #EAEBEF;
}

.question-item-name{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-right: 20rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 超出几行省略 */
  overflow: hidden;
}

.question-item-time{
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
}

.question-item-right{
  margin: auto;
  padding: 8rpx;
  width: 130rpx;
  background-color: #36A6FE;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}

.delColor{
  background: #d9d9d9;
  color: #7B7B7B;
}

.noData{
  font-size: 28rpx;
  color: #aaaaaa;
  text-align: center;
  margin-top: 500rpx;
}