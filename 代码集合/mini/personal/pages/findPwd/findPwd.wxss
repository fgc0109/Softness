/* personal/pages/findPwd/findPwd.wxss */
.wrap-box{
  width: 100%;
  background: #fff;
}

.top-head{
  margin-top: 140rpx;
}
.phone_box {
  width: 80%;
  margin-left: 10%;
  padding-top:150rpx;
}
.text_box {
  display: flex;
  padding-bottom: 80rpx;
}
.forget_pwd {
  flex: 1;
  font-size: 24rpx;
  color: #36A6FE;
}
.go_login {
  flex: 1;
  display: inline-block;
  font-size: 24rpx;
  margin-top: 10rpx;
  font-weight: normal;
  color: #409eff;
  text-align: right;
}
.input_box {
  width: 100%;
  position: relative;
}
.input_box input{
  border-radius: 12rpx;
  border: 1px solid #d6d6d6;
  padding: 15rpx 0 15rpx 24rpx;
}
.code_box {
  position: relative;
}
.phoneError{
  border:1px solid red !important;
}
.phone_input {
  font-size: 27rpx;
  margin-bottom: 80rpx;
}
.code_input {
  width: 56%;
  font-size: 27rpx;
}
.phone_error {
  position: absolute;
  top:84rpx;
  left: 0;
  font-size: 27rpx;
  color: red;
}
.code_error {
  position: absolute;
  top: 240rpx;
  left: 0;
  font-size: 27rpx;
  color: red;
}
.msg_btn {
  border-radius: 12rpx;  
  border: 1px solid #3DA1FF !important;
  width: 38% !important;
  font-size: 24rpx;
  background: #36A6FE !important;
  color: #fff !important;
  height: 78rpx;
  line-height: 46rpx;
}
.gray-txt{
  color: #999 !important;
}
.full-justified{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.disabled_btn {
  background-color: red !important;
}
.next_btn {
  width: 100%;
  margin: 80rpx auto;
  height: 80rpx;
  background: #3da1ff;
  text-align: center;
  font-size: 26rpx;
  color: #ffffff;
  border-radius: 80rpx;
  line-height: 80rpx;
}
.contact_customer {
  width: 100%;
  margin-top: 5rpx;
  margin-right: 50rpx;
  font-size: 25rpx;
  text-align: right;
}
.text_sty {
  color: #D9D9D9;
  font-size: 24rpx;
}
.contact_sty {
  display: inline;
  font-weight: 500;
  width: 100rpx !important;
  padding: 0;
  margin:0;
  color: #36A6FE;
  background: none;
  font-size: 24rpx;
}
.select_box{
  background: #fff;
  width: 100%;
  margin: 30rpx auto;
  margin-bottom: 60rpx;
  position: relative;
  color:#606266;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.select_text{
  font-size: 28rpx;
  flex: 1;
}
.shadow-box{
  box-shadow: 0px 3px 6px 0px rgba(222,222,222,0.50); 
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg);
}
.option_box{ 
  position: absolute;
  top: 74rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 999;
  border-radius: 8rpx;
  border-top: 0;
}
.no-boder{
  border:0 !important
}
.option{
  display: block;
  line-height: 60rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 10rpx 10rpx 24rpx;
}
.pwd_box{
  width: 100%;
}
.pwd_inputbox {
  width: 100%;
  position: relative;
  margin-top: 80rpx;
  margin-bottom: -120rpx;
}
.pwd_input {
  /* width: 100%; */
  border:1px solid #efefef;
  padding:15rpx 24rpx;
  font-size: 27rpx;
  margin-bottom: 80rpx;
}
.pwd_error {
  position: absolute;
  top:80rpx;
  left: 20rpx;
  font-size: 27rpx;
  color: red;
}
.confirmpwd_error{
  position: absolute;
  top:240rpx;
  left: 20rpx;
  font-size: 27rpx;
  color: red;
}
.confirm_btn {
  width: 85%;
  margin: 200rpx auto;
  height: 80rpx;
  background: #3da1ff;
  text-align: center;
  font-size: 26rpx;
  color: #ffffff;
  border-radius: 80rpx;
  line-height: 80rpx;
}
.img_pwd {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top:24rpx;
  right: 24rpx;
  z-index:99;
}
.img_confirm {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top:180rpx;
  right: 24rpx;
  z-index:99;
}







/* 提示窗 */
.popup{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
}
.mask{
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.3);
}
.popup_main{
  position: fixed;
  width: 80%;
  max-height: 700rpx;
  top: 25%;
  left: 0;
  right: 0;
  /* bottom: 0; */
  margin: auto;
  background: #fff;
  border-radius: 12rpx;
}
.pop-title{
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 2rpx solid #eee;
  position: relative;
  color: #555;
  margin-bottom: 36rpx;
}
.close-ico{
  position:absolute;
  width: 40rpx;
  height: 40rpx;
  right: 24rpx;
  top: 24rpx;  
}
.user-item{
  padding: 20rpx 24rpx 50rpx 24rpx;
  display: flex;
  align-items: center;
}
.user-item-text {
  color:#999999;
  font-size: 29rpx;
  display: inline-block;
  padding-left: 15rpx;
  text-indent: 50rpx;
}
.go-register {
  width: 90%;
  font-size: 29rpx;
  text-align: right;
  color: #3da1ff;
  padding-bottom: 30rpx;
}