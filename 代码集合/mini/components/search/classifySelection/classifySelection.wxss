/* components/search/classifySelection/classifySelection.wxss */
/*
内容区域
*/
.home-content {
  display: flex;
  width: 750rpx;
  height: 476rpx;
  border-top: 0.1px solid #e5e6eb;
  background-color: #fff;
}

.content-left {
  position: fixed;
  width: 192rpx;
  height: 476rpx;
  left: 0;
  background: #fff;
  z-index: 1000;
  border-right: 0.1px solid #e5e6eb ;
}

.content-left view {
  width: 192rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #524343;
  background-color: #fff;
}

.bor {
  border-bottom: 0.1px solid #e5e6eb;
}

.bor-top {
  border-top: 0.1px solid #e5e6eb;
}

.font-we {
  font-weight: bold !important;
  color: #36a6fe;
}

.left-fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.content-right {
  width: 74%;
  height: 462rpx;
  position: fixed;
  right: 0;
  z-index: 1000;
  background-color: #fff;
}

.choosed {
  position: relative;
  background: #fff;
  font-weight: bold;
  font-size: 30rpx;
  z-index: 1000;
}

.choosed-img {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: 8rpx;
  height: 32rpx;
  background: #36a6fe;
  border-radius: 0px 8rpx 8rpx 0px;
}

.project-content {
  width: 100%;
  position: relative;
  background-color: #fff;
}

.project-item {
  width: 100%;
  display: flex;
  align-items: center;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  color: #555555;
  border-bottom: 0.1px solid #e5e6eb;
  padding-left: 25rpx;
  background-color: #fff;
}
.wid {
  width: 100%;
}

.items-list {
  display: flex;
  flex-direction: column;
  padding: 70rpx 32rpx 30rpx;
  padding-bottom: 120rpx;
}

.active-items-list {
  padding-top: 0 !important;
}

/*
 筛选条件样式
*/
.scroll-contain {
  width: 100%;
  white-space: nowrap;
  padding-top: 20rpx;
}

.fixed-content {
  position: fixed;
  width: 542rpx;
  top: 120rpx;
  left: 206rpx;
  background: #ffffff;
  z-index: 1000;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
}

.new-scroll {
  display: flex;
}

.scroll-item {
  height: 56rpx;
  background: #deefff;
  border-radius: 16rpx;
  color: #747474;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx 0 20rpx;
  margin-right: 16rpx;
}

.scroll-item>text:nth-of-type(2) {
  display: inline-block;
  width: 0rpx;
  height: 0rpx;
  border-top: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-left: 12rpx solid #888888;
  transform: rotate(-45deg) translateY(-50%);
  margin-left: 10rpx;
}

.active-scroll-sty {
  color: #36A6FE;
}

.active-angle-sty {
  border-left: 12rpx solid #36A6FE !important;
}

.option-list {
  width: 542rpx;
  position: absolute;
  top: 76rpx;
  left: 0;
  background: #ffffff;
  display: flex;
  flex-wrap: wrap;
  z-index: 1000;
  padding: 20rpx 0 100rpx 30rpx;
}

.option-item {
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  color: #888888;
}

.active-option {
  color: #36A6FE !important;
}

.choosed-text {
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: bold;
  color: #555555;
}