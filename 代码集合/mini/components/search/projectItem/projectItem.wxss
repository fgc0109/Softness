/* components/project/projectItem/projectItem.wxss */
.project-first {
  padding: 0 24rpx;
  background: #FFFFFF;
}

.project-item {
  width: 100%;
  border-bottom: 2rpx solid #e7e6eb;
  background: #FFFFFF;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx 0;
}

.item-left {
  width: 200rpx;
  height: 142rpx;
  border-radius: 4rpx;
}

.comon-sty {
  width: 100%;
  height: 100%;
}

.item-right {
  width: 440rpx;
  height: 142rpx;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-right-active {
  width: 474rpx !important;
}

.total-content {
  display: flex;
  flex-direction: column;
}

.right-title {
  color: #333333;
  max-height: 70rpx;
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
  line-height: 36rpx;
  margin-bottom: 8rpx;
}

.right-desc {
  color: #999999;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.right-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 2rpx;
}

.price-content {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  color: #FF6D27;
}

.price-content>text:nth-of-type(1) {
  font-size: 24rpx;
  margin-bottom: 2rpx;
}

.price-content>text:nth-of-type(2) {
  font-size: 32rpx;
}

.detail-price {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.special-sty {
  font-size: 28rpx !important;
}

.previous-price {
  width: 100%;
  position: relative;
  color: #C5C5C5;
  font-size: 20rpx;
  margin-left: 6rpx;
}

.previous-price>text:nth-of-type(2) {
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 2rpx;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  background: #C5C5C5;
}