/* components/order/refundDetail/refundInfo/refundInfo.wxss */
.refund-info {
  background: #ffffff;
  border-radius: 20rpx;
  margin-top: 24rpx;
  padding: 24rpx;
}

.refund-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

/*退款商品信息
*/
.product-image {
  width: 192rpx;
  height: 138rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-desc {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.product-info {
  width: 446rpx;
  margin-left: 16rpx;
  display: flex;
  justify-content: space-between;
}

.product-info-left {
  display: flex;
  flex-direction: column;
}

.product-info-left>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  width: 300rpx;
  max-height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.product-info-left>text:nth-of-type(2) {
  color: #999999;
  font-size: 24rpx;
}

.product-info-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.product-info-right>text:nth-of-type(1) {
  color: #999999;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.product-info-right>text:nth-of-type(2) {
  color: #999999;
  font-size: 20rpx;
}

/*退款原因
*/
.refund-reason-contain {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
  margin: 24rpx 0 30rpx 0;
}

/*退款类型
*/
.refund-type {
  display: flex;
  justify-content: space-between;
}

.type-title {
  font-size: 28rpx;
  color: #333333;
}

.type-desc {
  display: flex;
  flex-direction: column;
}

.type-desc-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.type-desc-item>text:nth-of-type(1) {
  color: #333333;
}

.type-desc-item>text:nth-of-type(2) {
  color: #FD651C;
  margin-left: 32rpx;
}

/*申请时间
*/
.apply-time {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 29rpx;
}

/*退款编号
*/
.refund-number {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
}

.number-left {
  display: flex;
}

.number-left>text:nth-of-type(2) {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
  background: #F1F4F9;
  padding: 0 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}