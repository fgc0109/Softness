/* components/personal/submitOrder/propertyInfo/propertyInfo.wxss */
.order-info {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.order-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333333;
  font-size: 32rpx;
  margin: 32rpx 0 20rpx 24rpx;
  font-weight: bold;
}

.create-time {
  color: #333333;
  font-size: 28rpx;
  margin-left: 24rpx;
}

.create-status {
  color: #FF6D27;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.order-center {
  border-bottom: 1px solid #f4f4f4;
}

.center-top {
  display: flex;
  padding: 24rpx;
}

.img-container {
  margin-right: 16rpx;
}

.product-img {
  width: 192rpx;
  height: 138rpx;
}

.order-desc {
  width: 260rpx;
  height: 138rpx;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
}

.desc-title {
  width: 260rpx;
  height: 75rpx;
  margin-top: 12rpx;
  color: #333333;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc-type {
  color: #999999;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.order-price {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-top: 14rpx;
}

.price-value {
  color: #999999;
  font-size: 30rpx;
}

.price-Symbol {
  font-size: 24rpx;
}

.price-count {
  color: #999999;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.center-foot {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #333333;
  font-size: 32rpx;
  margin: 40rpx 24rpx 32rpx 0;
}

.center-foot>text:nth-of-type(1) {
  color: #999999;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.center-foot>text:nth-of-type(2) {
  font-size: 28rpx;
}

.center-foot>text:nth-of-type(3) {
  color: #FF6D27;
}

.btn-desc {
  margin-left: 24rpx;
  color: #333333;
  font-size: 24rpx;
}

.audit-img {
  width: 26rpx;
  height: 26rpx;
  margin-left: 8rpx;
}

.audit-content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-main {
  display: flex;
  flex-direction: column;
  margin: 10rpx 24rpx;
}

.order-main-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 46rpx;
}

.order-main-item:last-of-type {
  margin-bottom: 0;
}

.order-main-item>text:nth-of-type(1) {
  color: #333333;
  font-size: 28rpx;
}

.order-main-item>text:nth-of-type(2) {
  color: #333333;
  font-size: 28rpx;
}

.order-count {
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-count image {
  width: 40rpx;
  height: 40rpx;
}

.order-count text {
  display: flex;
  color: #333333;
  font-size: 32rpx;
  width: 80rpx;
  justify-content: center;
  align-items: center;
}