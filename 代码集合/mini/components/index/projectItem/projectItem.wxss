/* components/index/projectItem/projectItem.wxss */
.new-product-item {
  width: 340rpx;
  height: 420rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
}

.img-show-contain {
  width: 340rpx;
  height: 222rpx;
}

.new-product-item image {
  width: 340rpx;
  height: 222rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.new-bottom {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.new-title {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new-desc {
  color: #999999;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new-price-contain {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-main {
  color: #FA7A42;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price-num{
  font-weight: 550;
}
.new-price-contain image {
  width: 44rpx;
  height: 44rpx;
}

/*
 补充价格样式
*/

.price-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #FF6D27;
  margin-top: 4rpx;
}

.price-content>text:nth-of-type(1) {
  font-size: 32rpx;
  margin-bottom: 2rpx;
}

.price-content>text:nth-of-type(2) {
  font-size: 32rpx;
}

.detail-price {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.special-sty {
  font-size: 32rpx !important;
}

.previous-price {
  width: 100%;
  position: relative;
  color: #C5C5C5;
  font-size: 32rpx;
  margin-left: 6rpx;
}

.previous-price>text:nth-of-type(2) {
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 2rpx;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  background: #C5C5C5;
}

.ask-btn-contain {
  position: relative;
  width: 44rpx;
  height: 44rpx;
  margin: 0 !important;
  padding: 0 !important;
  background: #ffffff;
}

.ask-btn {
  margin: 0 !important;
  padding: 0 !important;
  background: #ffffff;
}