/* components/index/areaItem/areaItem.wxss */
.global-tip {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}
/* 
  省市区弹窗  
*/
.area-dialog {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 25rpx 25rpx 0 0;
  background: #fff;
  z-index: 9999;
}

.area-attribute {
  padding: 36rpx 24rpx 76rpx 24rpx;
}

.area-input {
  display: flex;
  line-height: 70rpx;
  justify-content: flex-end;
  position: relative;
  background-color: #F6F6F6;
  border-radius: 40rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}

.placeholder-sty {
  font-size: 28rpx;
}

.img-sty {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  z-index: 9999;
}

.input-sty {
  width: 570rpx;
  height: 70rpx;
  padding-left: 10rpx;
}

.close-sty {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  z-index: 9999;
}

.picker-box {
  width: 100%; 
  height: 300px;
  font-size: 28rpx;
}

.picker-sty {
  line-height: 50rpx; 
  text-align: center;
}

.area-btn {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  padding-top:50rpx
}

.cancel-btn {
  font-size: 30rpx;
  color: #7f7f7f;
}

.sure-btn {
  font-size: 30rpx;
  color: #07C160;
}

