/* components/project/pricePanel/pricePanel.wxss */
.dialog-main {
  width: 100%;
  bottom: 0;
  left: 0;
  position: absolute;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx 0rpx 20rpx 0rpx;
  color: #333333;
  border-radius: 10rpx !important;
  background: #ffffff;
}

.dialog-title {
  display: flex;
  font-weight: bold;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
}

.title-desc {
  font-size: 28rpx;
}

.title-unit {
  margin-left: 0rpx;
  font-size: 20rpx;
  color: #FF6A22;
}

.title-price {
  font-size: 34rpx;
  color: #FF6A22;
}

.dialog-option {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}

.option-title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 14rpx;
}

.wen-sty {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #36A6FE;
  width: 24rpx;
  height: 24rpx;
  font-size: 20rpx;
  margin-left: 12rpx;
  border-radius: 24rpx;
  border: 2rpx solid #36A6FE;
}

.option-list {
  display: flex;
  margin-bottom: 20rpx;
}

.option-item {
  position: relative;
  color: #666666;
  width: 220rpx;
  height: 116rpx;
  font-size: 24rpx;
  background: #ECF5FF;
  border: 2rpx solid #ECF5FF;
  border-radius: 12rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.choosed-img {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
}

.option-item-selected {
  border: 2rpx solid #36A6FE !important;
  background: #ffffff !important;
  color: #36A6FE !important;
}

.option-price-unit {
  font-size: 20rpx;
}

.option-price-value {
  width: 100%;
  font-size: 28rpx !important;
  text-align: center;
}

.option-guanfei {
  margin-bottom: 0rpx;
  width: 200rpx;
  text-align: center;
  height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dialog-count {
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.dialog-btn {
  margin-top: 23rpx;
  margin-left: 20rpx;
  width: 702rpx;
  height: 80rpx;
  background: #36A6FE;
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 24rpx;
  right: 20rpx;
}

.count-choose {
  margin-right: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.count-btn {
  width: 40rpx;
  height: 40rpx;
}

.count-value {
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  font-size: 32rpx;
  margin: 0 20rpx;
}

.now-price {
  position: relative;
  display: flex;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  color: #999999;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.previos-price {
  position: relative;
  display: flex;
  font-size: 20rpx;
  justify-content: flex-end;
  align-items: flex-end;
  color: #999999;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.price-pre {
  margin-left: 14rpx !important;
}

.center-lang {
  position: absolute;
  bottom: 50%;
  transform: translateY(50%);
  left: 0;
  display: flex;
  width: 100%;
  height: 2rpx;
  background: #999999;
}