/* components/information/infoItem/infoItem.wxss */
.info-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 24rpx 0 8rpx 24rpx;
  height: 158rpx;
  position: relative;
}

.info-box {
  display: flex;
  flex-direction: row;
}
.info-tag {
  display: inline-block;
  width: 75rpx;
  height: 36rpx;
  line-height: 36rpx;
  background-color: #6BBCFB;
  border-radius: 20rpx;
  color: #ffffff;
  font-size: 18rpx;
  text-align: center;
  padding-bottom: 2rpx;
  margin-right: 8rpx;
}

.top {
  background-color: #F05438;
}

.grey {
  background-color: #B4B4B4;
}

.orange {
  background-color: #F06038;
}

.info-title {
  width: 680rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #111e34;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info-icon {
  width: 40rpx;
  height: 44rpx;
  position: absolute;
  right: 42rpx;
  top: 45rpx;
}

.info-time {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #999999;
  margin-top: 8rpx;
  width: 92%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-line {
  display: block;
  width: 702rpx;
  height: 0rpx;
  border-top: 2rpx solid #e7e6eb;
  margin-left: 20rpx;
}

.info-view {
  width: 28rpx;
  height: 20rpx;
  margin-right: 12rpx;
}

.center {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 90%;
}