/* components/personal/myClass/myClass.wxss */
@import '/app.wxss';

.my-class {
  padding: 24rpx;
}

.scroll-class-view {
  width: 100%;
  /* white-space: nowrap; */
}

.scroll-class {
  width: 100%;
  display: -webkit-box;
  margin-top: 18rpx;
}

.scroll-class-item {
  width: 34%;
  margin-right: 16rpx;
}

.scroll-class-item>image {
  width: 100%;
  height: 124rpx;
  border-radius: 12rpx;
}

.my-class-title {
  font-size: 28rpx;
  height: 90rpx;
  color: #555;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.class-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
}

.pro-num {
  color: #36A6FE;
}

.more-sty {
  display: flex;
  align-items: center;
}


.more-sty>text:nth-of-type(1) {
  font-size: 28rpx !important;
  font-weight: normal;
  color: black;
}

.more-sty>text:nth-of-type(2) {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-top: 2rpx solid black;
  border-right: 2rpx solid black;
  transform: rotate(45deg);
}