/* components/address-item/address-item.wxss */
.address-item {
  display: flex;
  background: #FFFFFF;
  justify-content: flex-start;
  align-items: center;
  padding-left: 24rpx;
}

.active-address-item {
  border-radius: 20rpx !important;
}

.item-head {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.normal-desc {
  width: 100%;
  height: 100%;
  position: absolute;
  text-align: center;
  top: 50%;
  transform: translateY(-10%);
  left: 0;
  color: #FF6D27;
  font-size: 24rpx;
}

.active-normal-desc {
  font-size: 20rpx !important;
}

.item-head-img {
  margin-top: 20rpx;
  width: 36rpx;
  height: 36rpx;
}

.active-img-sty {
  width: 48rpx !important;
  height: 48rpx !important;
}

.item-main {
  display: flex;
  flex-direction: column;
  margin: 26rpx 0rpx 0 24rpx;
  width: 500rpx;
}

.active-item-main {
  display: flex;
  flex-direction: column;
  margin: 26rpx 0rpx 0 24rpx;
  width: 580rpx;
  justify-content: flex-start;
  align-items: flex-start;
}

.item-main-desc {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.desc-title {
  display: inline-block;
  max-width: 250rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.active-desc-title {
  display: inline-block;
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.desc-phone {
  font-size: 24rpx;
  color: #999999;
  margin: 0 14rpx 0 16rpx;
}

.item-main-content {
  color: #333333;
  width: 100%;
  max-height: 70rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  line-height: 36rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc-default {
  width: 64rpx;
  height: 36rpx;
  background: #36a6fe;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #FFFFFF;
}

.item-foot {
  padding-bottom: 25rpx;
  margin-left: 30rpx;
}

.item-foot-img {
  margin-top: 60rpx;
  width: 30rpx;
  height: 30rpx;
}

.add-address {
  width: 184rpx;
  height: 48rpx;
  background: #ffffff;
  border: 2rpx solid #36a6fe;
  border-radius: 8rpx;
  color: #36A6FE;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}