<!--components/personal/collection/classItem/classItem.wxml-->
<wxs src="/utils/order/order.wxs" module="orders"></wxs>
<view class="property-first" data-number="{{productInfo.number}}" bindtap="toDetail">
  <view class="property-item">
    <view class="item-left">
      <image lazy-load='true' class="comon-sty" src="{{imageUrl + productInfo.baseCoverUrl}}"></image>
      <text wx:if="{{productInfo.trySeeSectionNumber>0}}" class="try-see">试看</text>
      <text class="disabled-sty" wx:if="{{productInfo.deleted==1||productInfo.status==2||productInfo.showStatus==2}}">已失效</text>
    </view>
    <view class="item-right {{manageStatus==true?'item-right-select':''}}">
      <view class="course-title">
        <view class="course-top-title">
          <text class="course-title-vip" wx:if="{{productInfo.tradingChargeType != 1}}">
            <text class="vip-label" wx:if="{{(productInfo.tradingChargeType == 2)||(productInfo.tradingChargeType == 3)&&(productInfo.tradingVipPrice!==0)}}">VIP</text>
            <text class="vip-price" wx:if="{{productInfo.tradingChargeType == 2}}">免费</text>
            <text class="vip-price" wx:if="{{(productInfo.tradingChargeType == 3)&&(productInfo.tradingVipPrice!==0)}}">{{productInfo.tradingThirdFeeState==1? (productInfo.tradingVipPrice+productInfo.tradingThirdFee):productInfo.tradingVipPrice}}元</text>
          </text>
          <text class="course-title-price">{{productInfo.baseTitle}}</text>
        </view>
      </view>
      <view class="right-desc">{{productInfo.baseSlogan}}</view>
      <view class="right-price">
        <!-- 显示价格逻辑 -->
        <!-- 第二种情况：只显示原价 -->
        <view class="course-price" wx:if="{{productInfo.tradingChargeType != 1}}">
          <text>￥{{productInfo.tradingThirdFeeState==1? (productInfo.tradingCurrentPrice+productInfo.tradingThirdFee):productInfo.tradingCurrentPrice}}元</text>
          <view class="previous-price">
            <text>￥{{productInfo.tradingThirdFeeState==1? (productInfo.tradingOriginalPrice+productInfo.tradingThirdFee):productInfo.tradingOriginalPrice}}元</text>
            <text></text>
          </view>
        </view>
        <view wx:else class="course-price">
          <text>￥免费</text>
        </view>
      </view>
    </view>
  </view>
</view>