<!--components/personal/collection/propertyItem/propertyItem.wxml-->
<wxs src="/utils/order/order.wxs" module="orders"></wxs>
<view class="property-first" data-number="{{propertyInfo.number}}">
  <view class="property-item">
    <view class="item-left">
      <image lazy-load='true' class="comon-sty" src="{{orders.returnImg(propertyInfo.type)}}"></image>
      <text class="disabled-sty" wx:if="{{propertyInfo.deleted==1||propertyInfo.status==2||propertyInfo.showStatus==2}}">已失效</text>
    </view>
    <view class="item-right {{manageStatus==true?'item-right-select':''}}">
      <view class="right-title">{{propertyInfo.title}}</view>
      <view class="right-desc">{{propertyInfo.slogan}}</view>
      <view class="right-price">
        <!-- 显示价格逻辑 -->
        <!-- 第二种情况：只显示原价 -->
        <view class="price-content">
          <text></text>
          <text wx:if="{{propertyInfo.nowFee!==''&&propertyInfo.nowFee!==null}}">{{orders.priceFix(propertyInfo.nowFee)}}</text>
          <text wx:else>面议</text>
        </view>
      </view>
    </view>
  </view>
</view>