<!--components/personal/collection/supItem/supItem.wxml-->
<wxs src="/utils/order/order.wxs" module="orders"></wxs>
<wxs src="/utils/productdetails/productdetails.wxs" module="tools"></wxs>
<view class="property-first" data-number="{{productInfo.number}}" bindtap="toDetail">
  <view class="property-item">
    <view class="item-left">
      <image lazy-load='true' class="comon-sty" src="{{imageUrl + productInfo.imageUrl}}"></image>
      <text class="disabled-sty" wx:if="{{productInfo.deleted==1||productInfo.status==2||productInfo.showStatus==2}}">已失效</text>
    </view>
    <view class="item-right {{manageStatus==true?'item-right-select':''}}">
      <view class="right-title">{{productInfo.spuTitle}}</view>
      <view class="right-desc">{{productInfo.spuSlogan}}</view>
      <view class="right-price">
        <!-- 显示价格逻辑 -->
        <!-- 第二种情况：只显示原价 -->
        <view class="price-content" wx:if="{{productInfo.isOnline}}">
          <text>￥</text>
          <text wx:if="{{productInfo.spuMinAmount/1!=0}}">{{tools.filterDecimalPrice(productInfo.spuMinAmount)}}</text>
          <text wx:else>{{tools.filterDecimalPrice(productInfo.spuMaxAmount)}}</text>
          <text wx:if="{{tools.filterDecimalPrice(productInfo.spuMinAmount) != tools.filterDecimalPrice(productInfo.spuMaxAmount) && productInfo.spuMinAmount/1!=0}}">起</text>
        </view>
        <view class="price-content" wx:if="{{!productInfo.isOnline}}">面议</view>
      </view>
    </view>
  </view>
</view>