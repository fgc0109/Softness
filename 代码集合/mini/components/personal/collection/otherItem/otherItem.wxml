<!--components/personal/collection/propertyItem/propertyItem.wxml-->
<wxs src="/utils/order/order.wxs" module="orders"></wxs>
<view class="property-first" data-number="{{productInfo.number}}">
  <view class="property-item">
    <view class="item-left">
      <image lazy-load='true' class="comon-sty" src="{{imageUrl + productInfo.url}}"></image>
      <text class="disabled-sty" wx:if="{{productInfo.deleted==1||productInfo.status==2||productInfo.showStatus==2}}">已失效</text>
    </view>
    <view class="item-right {{manageStatus==true?'item-right-select':''}}">
      <view class="right-title">{{productInfo.title}}</view>
      <view class="right-desc">{{productInfo.slogan}}</view>
      <view class="right-price">
        <!-- 显示价格逻辑 -->
        <!-- 第二种情况：只显示原价 -->
        <view class="price-content">
          <text></text>
          <text>面议</text>
        </view>
      </view>
    </view>
  </view>
</view>