/* components/questionsAnswers/questionItem.wxss */
.question-item{
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx;
  margin: 10rpx 0;
  border-bottom: 2prx solid #EAEBEF;
}
.question-item-name{
  color: #000000;
  font-weight: 700;
  font-size: 32rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 超出几行省略 */
  overflow: hidden;
  margin-right: 50rpx;
}

.question-item-detail{
  display: flex;
  justify-content: space-between;
  color: #999999;
  font-size: 28rpx;
  margin-top: 10rpx
}

.answer-num{
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.answer-num image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.answer-num text{
  font-size: 28rpx;
}

.info-line{
  display: block;
  width: 702rpx;
  height: 0rpx;
  border-top: 2rpx solid #e7e6eb;
  margin-left: 20rpx;
}

.center {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 90%;
}

.info-title {
  width: 680rpx;
  height: 80rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #111e34;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
