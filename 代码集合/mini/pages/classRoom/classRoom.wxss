/* pages/classRoom/classRoom.wxss */
page {
  background: #EEF1F2;
}

.class-room {
  padding-bottom: 120rpx;
}

/*
 轮播图+搜索框
*/
.class-bg {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 24rpx;
}

.class-search {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 628rpx;
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ffffff;
  border-radius: 30rpx;
  font-size: 24rpx;
  z-index: 999;
}

.class-search image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 21rpx;
  margin-right: 12rpx;
}

.bg-img {
  width: 702rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 358rpx;
}

.bg-img image {
  width: 702rpx;
  height: 100%;
}

/*
 短视频
*/
.short-video {
  width: 100%;
  margin-top: 56rpx;
}

.scroll-video {
  width: 100%;
  display: flex;
  padding-left: 24rpx;
  margin-top: 18rpx;
}

.scroll-video-view {
  width: 100%;
}

.scroll-video-item {
  position: relative;
  width: 208rpx;
  height: 370rpx;
  padding-right: 18rpx;
  padding-bottom: 18rpx;
}

.short-video image {
  width: 208rpx;
  height: 370rpx;
  background: rgba(0, 0, 0, 0.00);
  border-radius: 16rpx;
}

.short-video video {
  width: 208rpx;
  height: 370rpx;
  background: rgba(0, 0, 0, 0.00);
  border-radius: 16rpx;
}

.play-contain {
  height: 40rpx;
  position: absolute;
  bottom: 30rpx;
  right: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #F5F7FB;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 0rpx 16rpx;
  border-radius: 20rpx;
}

.play-contain>image {
  display: inline-block;
  width: 18rpx;
  height: 21rpx;
  border-radius: 0rpx;
  margin-right: 8rpx;
}


/*
 免费专区
*/
.free-zone {
  margin-top: 64rpx;
}

.free-list-contain {
  background: #EEF1F2;
  margin-top: 18rpx;
}

.free-list {
  width: 702rpx;
  background: #ffffff;
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx 0 0 0;
  margin-left: 24rpx;
  border-radius: 20rpx;
}

.free-list-item {
  width: 300rpx;
  display: flex;
  flex-direction: column;
  background: #FAFCFF;
  font-size: 26rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  padding-bottom: 16rpx;
  margin-bottom: 24rpx;
  margin-left: 38rpx;
}

.wrap-sty {
  margin-right: 0rpx;
}

.right-wrap-sty {
  margin-left: 26rpx;
}

.free-list image {
  width: 300rpx;
  height: 168rpx;
  background: rgba(0, 0, 0, 0.00);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.free-list-item>text:nth-of-type(1) {
  width: 304rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  margin: 7rpx 9rpx;
}

.free-list-item>text:nth-of-type(2) {
  width: 304rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
  color: #CDCDCD;
  margin: 0rpx 9rpx;
}

.free-list-item>text:nth-of-type(3) {
  color: #FC8A2A;
  margin: 8rpx 9rpx;
}

/*
 VIP免费专区
*/
.vip-free-zone {
  margin-top: 58rpx;
}

.vip-free-main {
  width: 100%;
  /* height: 660rpx; */
  position: relative;
}

.vip-free-bg {
  width: 100%;
  height: 100%;
}

.vip-free-contain {
  background: linear-gradient(0deg, #fff 38%, #5a9ef7fb);
  padding: 2%;
  margin: 24rpx 24rpx 24rpx 30rpx;
  border-radius: 24rpx;
}

.vip-free-img {
  width: 660rpx;
  height: 280rpx;
  background: rgba(0, 0, 0, 0.00);
  border-radius: 20rpx 20rpx 0 0;
}

.vip-free-list {
  display: flex;
  flex-direction: column;
}

.vip-free-item {
  display: flex;
  align-items: center;
  height: 89rpx;
  border-bottom: 2rpx solid #E3E3E3;
}

.vip-free-item:last-of-type {
  border-bottom: none;
}

.vip-free-item>text:nth-of-type(1) {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  background: #ebf6ff;
  border: 2rpx solid #0a76f1;
  border-radius: 8rpx;
  color: #0a76f1;
  font-size: 28rpx;
  margin-left: 12rpx;
}

.vip-free-item>text:nth-of-type(2) {
  display: inline-block;
  width: 610rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #555555;
  font-size: 28rpx;
  margin-left: 19rpx;
}

/*
 分类列表
*/

.scroll-contain {
  width: 96%;
  white-space: nowrap;
}

.new-scroll {
  display: flex;
  padding: 0 24rpx;
}

.scroll-item {
  position: relative;
  margin-right: 40rpx;
  width: 134rpx;
  height: 80rpx;
  color: #999999;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroll-item>text:nth-of-type(2) {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  width: 42rpx;
  height: 10rpx;
  border-radius: 6rpx;
  background: #418AFE;
  margin-top: 18rpx;
}

.active-scroll-sty {
  color: #333333 !important;
  font-size: 32rpx !important;
  font-weight: bold;
}

.course-list {
  width: 94%;
  margin: 0 3%;
  margin-top: 16rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding-bottom: 24rpx;
}

.more-course {
  display: flex;
  width: 671rpx;
  margin-left: 50%;
  transform: translate(-50%);
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #E5E5E6;
  padding: 28rpx 28rpx 16rpx 28rpx;
  margin-top: 19rpx;
}

.more-course text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 670rpx;
  height: 80rpx;
  background: #edf2fa;
  border-radius: 0px 0px 20rpx 20rpx;
  color: #418AFE;
  font-weight: bold;
  font-size: 28rpx;
}

.classify-img {
  width: 697rpx;
  height: 168rpx;
  margin-left: 50%;
  transform: translate(-50%);
  border-radius: 8rpx;
  margin-top: 43rpx;
}

/*
 精品课程
*/
.quality-courses {
  margin-top: 64rpx;
}

.quality-course-list {
  width: 94%;
  margin: 0 3%;
  margin-top: 16rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding-bottom: 40rpx;
}

/*
 公共样式
*/
.common-title {
  position: relative;
  display: flex;
  align-items: center;
  color: #333333;
  font-weight: bold;
  font-size: 32rpx;
}

.common-title>text:nth-of-type(1) {
  display: inline-block;
  width: 10rpx;
  height: 40rpx;
  background: linear-gradient(0deg, #33a7ff, #3a81fd);
  margin-right: 14rpx;
  margin-left: 24rpx;
}

.common-more {
  position: absolute;
  display: flex;
  align-items: center;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  color: #BCBCBC;
  font-size: 26rpx;
  font-weight: normal;
}

.common-more>text:nth-of-type(2) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-top: 2rpx solid #BCBCBC;
  border-right: 2rpx solid #BCBCBC;
  transform: rotate(45deg);
  margin-top: 4rpx;
  margin-left: 2rpx;
}