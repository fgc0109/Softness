//一行文字超过...需设置宽度
clamp-1(maxsize)
  width: maxsize
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
//两行文字超过...
clamp-2(maxsize) 
  width: maxsize
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  vertical-align: middle;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
