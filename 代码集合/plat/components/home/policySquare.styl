.policyNav{
    position relative
    display:flex;
    align-items: center;
    height: 50px;
    line-height 50px
    background: linear-gradient(140deg, #57A8EB 0%, #8CCBFC 100%);
    border-radius: 5px 5px 0px 0px;
    padding 0 20px 0 20px
    cursor pointer

    .notice{
        font-weight: bold;
        font-size: 18px;
        color: #FFFFFF;
        margin-left:10px;
        cursor pointer
    }
    .more{
        position: absolute;
        right: 20px;
        color: #FFFFFF;
        font-size: 12px;
        display: flex;
        align-items: center;
        cursor pointer
    }
}


