.frame{
    width:100%;
    margin-bottom: 10px;
    background: rgb(245 245 245);
    .policy_box{
        width:1200px;
        margin:0 auto;
        font-family:Microsoft YaHei UI;
        letter-spacing:1px;
        .policy_title{
            padding-top:30px;
            width:108px;
            margin:0 auto;
            font-size:26px;
            color:#373D40;
        }
        .title_line{
            width:48px;
            height:3px;
            background:#36A6FE;
            margin:5px auto;
        }
        .city-style{
            width:100%;
            text-align:center;
            padding:13px 0;
            cursor:pointer;
            color:#FFF;
            font-size:14px;
            border-bottom:1px solid #8096C9;
        }
        .city-style:hover{
            background:#3686FE;
        }
        .announcement{
            margin-top:11px;
        }
        .area-list{
            height: 360px;
            display:flex;
            margin-top: 22px;

            .doright{
               .frame {
                width: 100%;
                height:320px;
                font-size:14px;
                font-family:Microsoft YaHei UI;
                background:#FFF;
                .box{
                    height: 300px;
                    background:#FFF;
                    .areaword{
                       opacity: 0.5;
                       color: #323232;
                       font-size: 16px;
                       margin-right 18px
                       height: 60px;
                       text-align: center;
                       cursor: pointer;
                       flex-shrink: 0;
                       position: relative;
                       padding-top: 18px;
                       .scrollsmall{
                           width: 20px;
                           height: 2px;
                           background: #323232;
                           position: absolute;
                           top: 44px;
                           left: 50%;
                           transform: translateX(-50%);
                       }
                    }
                    .activeTabs{
                        color: #323232;
                        opacity: 1;
                        font-weight: bold;
                   }
                    .list-head p:nth-child(1){
                        marin-left:3%;
                        background: #68b2ef1a;
                        padding:7px 18px;
                        max-width:250px;
                        color: #36A6FE;
                        text-align:center;
                        border-radius: 60px;
                    }
                    .list-head p:nth-child(2){
                        margin-left:93%;
                        margin-top:-23px;
                        font-size:14px;
                        cursor:pointer;
                        opacity: 0.5;
                    }
                    .content{
                            width: 100%;
                            overflow: hidden;
                            margin: 11.5px 0;
                            margin-left: 18px;
                            position: relative;
                            top: -16px;

                    }
                    .circle{
                        width: 8px;
                        height: 8px;
                        background: #F97700;
                        border-radius: 50%;
                        opacity: 1;
                    }
                    .content-title{
                        width:475px;
                        padding-left:5px;
                        cursor:pointer;
                        color:#373D40;
                        text-overflow:ellipsis;
                        overflow:hidden;
                        display:-webkit-box;
                        -webkit-box-orient:vertical;
                        -webkit-line-clamp:1;
                    }
                    .content-title:hover{
                       color:#36A6FE;
                    }
                    .content-time{
                        margin-left:42px;
                        color:#A8A8A8;
                    }
                }
            
}
            }
        }
        
    }
}

