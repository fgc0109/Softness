.child-cont
    width: 100%
    padding: $fs12
    display: flex;
    align-items: baseline;
    .province
        border-right: 1px solid #F9FAFE;                
    .province, .city
        width: 50%;
        max-height: 6rem;
        overflow: scroll;
        .item
            color: #555;
            font-size: $fs14;
            padding: $fs14;
            border-bottom: 1px solid #F9FAFE;    
        .choosed
            color: #42ABFE;
    .scroll-item 
        width: 100%;
        height: 1.28rem;
        line-height: 1.28rem;
        padding-left: $fs16;
        color: #555;
        font-size: $fs14;
        border-bottom: 1px solid #f5f4f4;
        .active-scroll-sty 
            color: #42ABFE !important;
            font-size: $fs14 !important;
            font-weight: bold;
    .to-top
        padding-top: 3.36rem;
        .list-item
            border-bottom: 1px solid #E4E4E4
            padding: $fs12 0
            display: flex
            align-items: center
            justify-content:space-between
            .item-img
                width: 27%
                height: 0
                padding-bottom: 2rem
                overflow: hidden
                img
                    width: 100%
            .item-right
                width: 68%
                .product-title
                    clamp-2(100%)
                    color: #333333
                    font-weight: 700
                .product-span
                    color: #666666
                    font-size: var(--size-14)
                .item-price
                    margin-top: $fs14
                    span
                        font-size: $fs12
                    .big-price
                        font-size: $fs18 !important
    
        