.approve-wrap{
    width:100%
    min-height:740px
    .block-info{
        margin:20px 0;
        .block-title{
            display:flex
            align-items:center
            margin-bottom: 20px
            .rectangle{
                width: 5px;
                height: 15px;
                background: #0aa1ed;
                border-radius: 3px;
                padding: 0;
                margin-right: 10px
            }
            p{
                color: #333
                font-weight:550
                font-size: 16px
            }
            .note-txt{
                font-size: 12px
                margin-left: 20px
                color: red
            }
        }
        .flex-layout{
            display: flex
            align-items: flex-end 
            .color-warning{
                margin-left 20px
                color: rgb(245,154,35)
            }
        }
        .form-box{
            margin: 20px 0 0 20px
            .input-flex{
                display: flex
                .el-form-item__content{
                    margin-left: -20px !important
                    display: flex
                    .el-form-item{
                        margin-right:20px
                    }
                }
            }
            .accredit{
                display: grid
                .el-form-item__content{
                    .el-radio{
                        display: block !important
                        margin-bottom:14px
                    }
                }
                .warning-text{
                    margin-left: 20px
                    color: #f00
                }
            }
            .block-title{
                margin-left: -20px
                justify-content: space-between;
                .flex-fb{
                    display: flex
                    align-items: center
                }
            }
            .el-form-item{
                display: grid
            }                      
        }
    }
    p{
        margin: 0 
    }
}
.table-box{
    margin: 0
} 
.margin-t-b-16{
    margin: 16px 0
}
.template-require{
    font-size: 14px
    color: #999
}
.upload-file{
    margin-top: 0 !important 
}
.approve-wrap .el-upload{
    display: block !important
    text-align: left !important;
}
.error-note{
    text-align: center
    p{
        color: #555
    }
}
.note-red{
    margin: 10px 0 0 10px !important
    font-size: 12px;
    font-wieght: 400 !important
    color: #f00
}
.center-btn{
    text-align: center
    padding: 40px 0
}
.certify-contain{
  display: flex;
  justify-content: center;
  align-items: center;
}
.certify_img_sty{
  width: 20px;
  height: 20px;
  margin-left: 6px;
}
.flex-layout{
    display: flex !important
    align-items: flex-end 
}