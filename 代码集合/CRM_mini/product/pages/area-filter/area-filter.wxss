/* product/pages/area-filter/area-filter.wxss */
.search {
  width: 100%;
  height: 100rpx;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx
}

.input {
  background: #fff;
  width: 70%;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  text-align: center;
  padding-left: 15rpx;
}

.cancle {
  color: #36A6FE;
}

.staticCity {
  padding: 20rpx 20rpx;
  font-size: 28rpx;
}

.city-code {
  padding: 0rpx 20rpx;
  font-size: 26rpx;
  height: 50rpx;
  background: #eee;
  line-height: 50rpx;
}

.city-item {
  padding: 0rpx 40rpx;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.search-city {
  padding: 0rpx 20rpx;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.btns {
  position: fixed;
  bottom: 0;
  background:#ffffff;
  display: flex;
  width: 100%;
  height: 120rpx;
  justify-content: space-between;
  color: #36A6FE;
}

.cancel-btn {
  margin: 30rpx 0 0 80rpx;
}

.confirm-btn {
  margin: 30rpx 80rpx 0 0;
}

.dot-active {
  width: 12rpx;
  height: 24rpx;
  border-color:#5579F4;
  border-style: solid;
  border-width: 0 6rpx 6rpx 0;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.p-sty {
  font-size: 28rpx;
  color: #666666;
  padding-left: 15rpx;
}

.inp-sty {
  margin-left: 15rpx;
  width: 700rpx;
  height: 60rpx;
  border: 1rpx solid #b6b6b6;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.scrollview {
  background-color: #fff;
  z-index: 9999;
  width: 700rpx;
  margin-left: 15rpx;
  font-size: 28rpx;
  border-radius: 0 0 5rpx 5rpx;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.itemview {
  border-bottom: 1rpx solid #ebebf0;
  line-height: 60rpx;
  box-sizing: border-box;
  padding-left: 15rpx;
}

.option-box {
  position: absolute;
  top: 140rpx;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 9999;
}



