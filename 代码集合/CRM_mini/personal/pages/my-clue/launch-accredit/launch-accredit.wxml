<!--personal/pages/my-clue/launch-accredit/launch-accredit.wxml-->
<view class="contract-contain">
  <!-- 认证信息 -->
  <view class="common-contain">
    <view class="common-labels">
      <text>用户已认证信息</text>
      <image src="/personal/image/my-clue/certified-low.png" class="common-img"/>
    </view>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">主体名称</text>
        <view class="common-item-foot">
          <text>{{userAuthInfo.companyName}}</text>
        </view>
      </view>
    </block>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">信用代码</text>
        <view class="common-item-foot">
          <text>{{userAuthInfo.organization}}</text>
        </view>
      </view>
    </block>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">主体ID</text>
        <view class="common-item-foot">
          <text>{{userAuthInfo.userNo}}</text>
        </view>
      </view>
    </block>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">用户名</text>
        <view class="common-item-foot">
          <text>{{userAuthInfo.username}}</text>
        </view>
      </view>
    </block>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">客服</text>
        <view class="common-item-foot">
          <text>{{userAuthInfo.customerServerName}}</text>
        </view>
      </view>
    </block>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">推广归属</text>
        <view class="common-item-foot">
          <text>{{userAuthInfo.promoteAttributionName}}</text>
        </view>
      </view>
    </block>
  </view>

  <!-- 待授权信息 -->
  <view class="common-contain">
    <view class="common-label">
      <text>待授权信息</text>
    </view>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">姓名</text>
        <view class="common-item-foot">{{accreditInfo.contactName}}</view>
      </view>
    </block>
    <block>
      <view class="common-clue-item">
        <text class="common-item-label">手机号</text>
        <view class="common-item-foot">{{accreditInfo.mobile}}</view>
      </view>
    </block>
  </view>

  <!-- 合同附件 -->
  <view class="common-contain">
    <view class="common-file-label">
      <view class="common-file-box">
        <text>合同附件</text>
        <text>格式为pdf文件，大小不超过20M</text>
      </view>
      <text wx:if="{{contractFileList.length==0}}" bindtap="chooseFile">选择文件</text>
    </view>
    <block wx:if="{{contractFileList.length>0}}">
      <view class="common-clue-item {{index==0?'first-clue-item':''}}" wx:for="{{contractFileList}}" wx:key="index">
        <text class="common-item-label">{{item.name}}</text>
        <view class="common-item-foot">
          <image bindtap="delContractFile" class="common-item-close" src="/personal/image/my-order/icon_close@2x.png"></image>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="order-empty small-sty">
        暂无数据
      </view>
    </block>
  </view>

  <!-- 审批人信息 -->
  <view class="common-contain">
    <view class="approval-item">
      <view class="common-item-head">
        <text class="approval-item-text">审批人</text>
      </view>
      <view class="common-item-foot">
        <block wx:if="{{approverList.length>0}}">
          <picker bindchange="changeApprover" range-key="name" range="{{approverList}}">
            <text wx:if="{{approverInfo.name!=''}}">{{approverInfo.name}}</text>
            <text wx:else class="no-val">请选择审批人</text>
            <image class="common-img-sty" src="/personal/image/my-clue/icon_drop-down@2x.png"></image>
          </picker>
        </block>
        <view wx:else >
          <text wx:if="{{approverInfo.name!=''}}">{{approverInfo.name}}</text>
          <text wx:else class="no-val">请选择审批人</text>
          <image class="common-img-sty" src="/personal/image/my-clue/icon_drop-down@2x.png"></image>
        </view>
      </view>
    </view>
  </view>

  <!-- 备注 -->
  <view class="common-remark-contain">
    <view class="common-remark-label">
      <text>授权备注</text>
    </view>
    <view>
      <textarea value="{{authRemark}}" bindblur="changeRemark" maxlength="100" class="common-item-textarea" placeholder="请输入授权备注，不超过100字" placeholder-class="p-sty"></textarea>
    </view>
  </view>

  <!-- 按钮区域 -->
  <view class="common-btn">
    <text bindtap="handleOperate" data-type="{{false}}">取消</text>
    <text bindtap="handleOperate" data-type="{{true}}">提交审核</text>
  </view>
</view>

  <!-- 选择用户弹窗 -->
  <view class="common-contain-user" wx:if="{{userDialog}}">
    <view>
      <user-item userList="{{userList}}" bind:userInfo="getUserInformation" wx:if="{{userList.length>0}}"></user-item>
    </view>
  </view>

