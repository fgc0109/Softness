/* personal/pages/my-clue/detail/detail.wxss */
page {
  background: #F5F7FB;
}

.clue-detail {
  padding: 24rpx;
  font-size: 28rpx;
}

/*
  线索头部信息样式
*/
.clue-head {
  background: #ffffff;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
}

.clue-head-title {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.clue-head-name {
  display: flex;
  align-items: flex-start;
}

.clue-head-name>text:nth-of-type(1) {
  display: inline-block;
  max-width: 460rpx;
  color: #333333;
  font-weight: bold;
}

.clue-head-no {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 34rpx;
  color: #555555;
}

.clue-source {
  display: flex;
  align-items: center;
}

.clue-head-man {
  display: flex;
  justify-content: flex;
  align-items: center;
  margin-top: 34rpx;
  color: #555555;
}

.head-man-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.follow-sty {
  color: #B4B4B4;
  font-size: 24rpx;
}

.bew-sty {
  display: flex;
  justify-content: space-between !important;
}

.clue-head-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 30rpx 0 0rpx 0;
}

.clue-head-btn>text {
  color: #0082FC;
  margin-left: 30rpx;
}

/*
  tab栏切换
*/
.clue-tab {
  margin-top: 24rpx;
}

.fixed-sty {
  width: 100%;
  position: fixed;
  top: -24rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #F5F7FB;
  z-index: 9999 !important;
}


/*
  公共样式
*/
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
}

.common-tag-sty {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 56rpx;
  height: 36rpx;
  padding: 0rpx 4rpx;
  background: #39A0FF;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  margin-left: 16rpx;
}

.common-certify-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.common-angle-sty {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

.global-tip {
  z-index: 9999;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 352rpx;
  height: 180rpx;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  margin: auto;
  color:#ffffff;
  border-radius: 15rpx;
  font-size: 26rpx;
  padding: 5rpx 40rpx;
  letter-spacing: 0.5rpx;
}

.jigou{
  background-color: green;
}

/* 
  认证类型弹窗
*/
.auth_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 10001;
}
.auth_con {
  z-index: 10002;
  position: fixed;
  top: 500rpx;
  left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.auth_content {
  width: 668rpx;
  height: 285rpx;
  background: #ffffff;
  border-radius: 15rpx;  
}
.auth_title {
  display: inline-block;
  color:#1d1c1c;
  margin: 30rpx 40rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 700;
}
.auth_radio {
  font-size: 28rpx;
  padding-left: 35rpx;
  height: 50rpx;
}
.auth_gap {
  margin-right: 40rpx;
}
.auth_btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #F7F7F7;
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 900;
}
.auth_cancel {
  flex: 1;
  color: #999999;
  border-right: 1rpx solid #F7F7F7;
}
.auth_submit {
  flex: 1;
  color: #36a6fe;
}