/* personal/pages/my-order/detail/product-order/product-order.wxss */
page {
  background: #F5F7FB;
}

.product-order {
  padding: 24rpx 24rpx 40rpx 24rpx;
}

.order-tab {
  margin-bottom: 24rpx;
}

/* 订单信息 */
.order-head {
  background: #FFFFFF;
  width: 702rpx;
  background: #ffffff;
  border-radius: 20rpx;
}

/* 任务未生成 */
.no-task {
  width: 100%;
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
}

.no-task-text {
  width: 100%;
  text-align: center;
  padding-top: 100rpx;
  color: #555555;
  font-size: 30rpx;
}

.no-task-item {
  font-size: 36rpx;
  font-weight: 700;
  color: #0082FC;
}
/* personal/components/my-order/product-item/product-item.wxss */
.product-item {
  width: 654rpx;
  background: #ffffff;
  margin: 0 auto;
  padding: 32rpx 24rpx;
  border-radius: 10px;
  margin-bottom: 24rpx;
}

/*
  订单编号—状态
*/
.product-head {
  display: flex;
  justify-content: space-between;
}

.head-left {
  display: flex;
  align-items: center;
}

.head-left>text:nth-of-type(1) {
  color: #555555;
  font-size: 28rpx;
}

.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(1) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #0989e8;
  border-radius: 50%;
  margin-right: 8rpx;
}

.head-right>text:nth-of-type(2) {
  color: #555555;
  font-size: 28rpx;
}

/*
  产品名称—数量
*/
.product-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  font-size: 28rpx;
}

.product-name>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
}

.product-name>text:nth-of-type(2) {
  color: #7B7B7B;
}


/*
  规格属性
*/
.product-attribute {
  display: flex;
  margin-top: 16rpx;
}

.product-attribute>text {
  display: inline-block;
  background: #C4E2FF;
  border-radius: 8rpx;
  color: #4BA8FF;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  margin-right: 16rpx;
}

/* 
  客户名称/尾款状态/创建时间
*/
.common-contain {
  display: flex;
  align-items: center;
  color: #7B7B7B;
  font-size: 28rpx;
  margin-top: 16rpx;
}


/*
  按钮区域
*/

.btn-contain {
  border-top: 2rpx solid #EAEBEF;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0 0 0;
  margin-top: 24rpx;
}

.btn-left {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 28rpx;
}

.btn-left>text:nth-of-type(1) {
  color: #333333;
}

.btn-left>text:nth-of-type(2) {
  color: #FA7A42;
}

.btn-right {
  display: flex;
  align-items: center;
  color: #0082FC;
  font-size: 28rpx;
}

.btn-right>text {
  margin-left: 24rpx;
}

/*
  公共样式
*/
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.disabled-sty {
  color: #B4B4B4 !important;
}

.disabled-bg-sty {
  background: #EAECF1 !important;
}

.disabled-price-sty {
  color: #555555 !important;
}

.tail-sty {
  color: #FAB042;
}

.fail-audit {
  background-color: #F5F7FB;
  color: #A5A5A5;
  font-size: 24rpx;
  padding: 16rpx;
  margin-top: 16rpx;
}

.common-item-textarea {
  padding: 18rpx;
  width: 580rpx;
  height: 180rpx;
  font-size: 28rpx;
  color: #7B7B7B;
  background: #F9FBFC;
}

.title_task {
  font-size: 28rpx;
  text-align: center;
}

.felx {
  display: flex;
}

.comment_sty {
  font-size: 28rpx;
  padding: 20rpx 28rpx;
}

.operation {
  margin: 20rpx 0;
}

.operation>text {
  padding: 10rpx;
  background-color: #888888;
}

.auditor {
  margin: 60rpx 0;
}

.red_sty {
  color: red;
}

.operation{
  margin: 100rpx 150rpx;
  justify-content: space-between;
}
.operation>view:first-child{
  background-color: #0082FC;
  color: #ffffff;
  padding: 10rpx;
  border-radius: 10%;
}
.operation>view:last-child{
  border: 1px solid #000;
  background-color: #ffffff;
  padding: 10rpx;
  border-radius: 10%;
}
.taskOpen-sty{
  color: #888888;
}