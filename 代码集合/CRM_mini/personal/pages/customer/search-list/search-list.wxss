/* personal/pages/customer/search-list/search-list.wxss */
page {
  background: #F5F7FB;
}

.my-clue {
  display: flex;
  flex-direction: column;
}

/*
搜索框和背景区域
*/
.area {
  font-size: 28rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  padding: 20rpx 60rpx;
}

.area image {
  width: 32rpx;
  height: 32rpx;
}

.search {
  display: flex;
  justify-content: center;
}

.top-fixed {
  position: fixed;
  z-index: 10000;
  top: 0;
  left: 0;
  width: 100%;
  height: 180rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #f7f5f5;
}

.search-contain {
  display: flex;
  width: 640rpx;
  align-items: center;
  height: 72rpx;
  background: #ffffff;
  border-radius: 36rpx;
  border: 2rpx solid #36A6FE;
}

.search-contain-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-contain-left text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  margin-left: 30rpx;
  margin-right: 0rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.search-contain-left image {
  width: 32rpx;
  height: 32rpx;
}

.lang-sty {
  width: 2rpx;
  height: 40rpx;
  background: #707070;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.search-contain-right {
  display: flex;
  align-items: center;
}

.search-contain-right image {
  width: 36rpx;
  height: 36rpx;
}

.search-contain-right input {
  width: 420rpx;
  display: inline-block;
  color: #666666;
  font-size: 28rpx;
  margin-left: 8rpx;
}

.active-input-sty {
  width: 350rpx !important;
}

.fixed-search {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
  margin-left: 12rpx;
  padding: 20rpx 0;
}

.close-icon {
  position: absolute;
  right: 110rpx;
  z-index: 999 !important;
}

/*
  线索信息卡片列表
*/
.clue-list {
  width: 654rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 200rpx;
  padding: 0 24rpx;
}

/* 弹出层 */
.area-btn {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.cancel-btn {
  font-size: 30rpx;
  color: #7f7f7f;
  margin-left: 30rpx;
}

.chongzhi {
  color: #07C160;
  margin-right: 30rpx;
}

.sure-btn {
  font-size: 30rpx;
  color: #0082FC;
  margin-right: 30rpx;
  display: flex;
}

/* 订单查看 */
.orderShow {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  width: 100%;
  background-color: #F5F7FB;
  position: fixed;
  z-index: 1000;
}

.orderList {
  margin-top: 80rpx !important;
}

.close {
  position: relative;
  left: 200rpx;
}

.close::before {
  transform: rotate(45deg);
}

.close::after {
  transform: rotate(-45deg);
}

.close::before {
  transform: rotate(45deg);
}

.close::after {
  transform: rotate(-45deg);
}

.orderDetail {
  width: 90%;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  background-color: #fbfcfe;
  font-size: 24rpx;
  position: relative;
  margin: 20rpx auto;
  border-radius: 15rpx;
}

.orderDetail view {
  margin: 5rpx 0;
  color: #7B7B7B;
}

.orderNo {
  font-size: 28rpx;
  border-bottom: 1px solid #F2F2F2;
  color: #555555;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.head-left {
  display: flex;
  align-items: center;
}

.head-left image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(1) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #0989e8;
  border-radius: 50%;
  margin-right: 8rpx;
}

.head-right>text:nth-of-type(2) {
  color: #555555;
  font-size: 28rpx;
}

.spuName {
  font-size: 24rpx;
  font-weight: 700;
  color: #333333 !important;
  margin: 20rpx 0 !important;
  display: flex;
  justify-content: space-between;
}

.createTime {
  margin-bottom: 20rpx !important;
}

.belongName text {
  margin-right: 40rpx;
}

.orderTotal {
  padding: 20rpx 0 !important;
  border-top: 1px solid #F2F2F2;
  font-weight: 700;
  text-align: end;
  margin-right: 40rpx !important;
  color: #333333 !important;
}

.orderTotal text {
  color: #FA7A42;
}

.empty-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 50%;
  z-index: 10000;
}

.active-empty-sty {
  margin-top: 70% !important;
}

.empty-page>image {
  width: 320rpx;
  height: 224rpx;
}

.empty-page>text:nth-of-type(1) {
  margin: 12rpx 0;
  color: #555555;
  font-size: 24rpx;
}

.empty-page>text:nth-of-type(2) {
  color: #555555;
  font-size: 24rpx;
}

.picker-sty {
  width: 100%;
  height: 600rpx;
}

.indicator-sty {
  height: 100rpx;
}

.picker-item-sty{
  line-height: 100rpx; 
  text-align: center;
  font-size: 28rpx;
}
