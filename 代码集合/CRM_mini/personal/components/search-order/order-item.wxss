/* personal/components/search-order/order-item.wxss */
.order-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 25rpx;
  color: #555555;
  font-size: 28rpx;
}

.order-item view {
  margin-bottom: 10rpx;
}

.order-no {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0 20rpx 0;
  border-bottom: 1px solid #F2F2F2;
}

.common-img-sty {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}

.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(1) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #0989e8;
  border-radius: 50%;
  margin-right: 8rpx;
}

.head-right>text:nth-of-type(2) {
  color: #555555;
  font-size: 28rpx;
}

.order-spuName {
  color: #333333;
  font-weight: 700;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}

.order-buyNum{
  color: #555;
  font-weight: 500;
}

.order-belongName {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
}

.order-belongName text {
  margin-right: 21rpx;
}

.order-belongName>text:nth-of-type(3) {
  margin-right: 0;
}

.order-createTime {
  padding-bottom: 20rpx;
}

.order-totalAmount {
  text-align: end;
  border-top: 1px solid #F2F2F2;
  padding-top: 20rpx;
  font-weight: 700;
  color: #333;
}

.price {
  color: #FA7A42;
}