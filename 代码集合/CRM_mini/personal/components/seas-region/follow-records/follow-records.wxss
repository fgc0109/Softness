/* personal/pages/my-clue/follow/follow.wxss */
page {
  background: #F5F7FB;
  padding-bottom: 120rpx;
}

.generate-order {
  background: #ffffff;
  padding-bottom: 100rpx;
}

.order-item {
  width: 702rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #EAEBEF;
  font-size: 28rpx;
  margin: 0 auto;
}

.order-item-head {
  display: flex;
  align-items: center;
  color: #7B7B7B;
}

.order-item-foot {
  display: flex;
  align-items: center;
  color: #D9D9D9;
}

.required-sty {
  color: #FF6D27;
}

.pointer-sty {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #000000;
  border-right: 2rpx solid #000000;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

.generate-head {
  padding-bottom: 24rpx;
}

/*
  产品展示区域
*/

.show-select-product {
  width: 100%;
  background: #ffffff;
  padding: 24rpx 0;
}

.select-product-list {
  width: 702rpx;
  background: #ffffff;
  margin: 0 auto;
  padding-bottom: 24rpx;
}

.select-product-item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #555555;
  margin: 0 auto;
}

.select-product-item>text:nth-of-type(1) {
  font-size: 28rpx;
}

.select-product-item image {
  width: 24rpx;
  height: 24rpx;
}

.select-product-foot {
  display: flex;
  align-items: center;
}

.select-product-foot>text:nth-of-type(1) {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.show-menu-sty {
  transform: rotate(180deg);
}

/*
  操作按钮区域
*/

.btn-contain {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  box-shadow: -6rpx -6rpx 8rpx 0 rgba(0, 0, 0, 0.03);
  z-index: 1 !important;
}


.submit-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFFFFF;
  font-size: 28rpx;
  width: 656rpx;
  height: 88rpx;
  background: #EAEBEF;
  border-radius: 44rpx;
}

/*
  公共样式区域
*/
.common-sty {
  width: 100%;
  text-align: left;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.common-bold-sty {
  font-weight: bold !important;
  color: #333333 !important;
}

.certify-sty {
  display: inline-block;
  background: #0082FC;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  margin-left: 8rpx;
}

/*
  跟进内容
*/
.column-sty {
  width: 702rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 32rpx;
}

.common-item-textarea {
  margin-top: 16rpx;
  padding: 18rpx;
  width: 654rpx;
  height: 218rpx;
  font-size: 28rpx;
  color: #555555;
  background: #F9FBFC;
}

.upload-foot {
  display: flex;
  align-items: center;
  color: #555555;
  margin-top: 24rpx;
}

.p-sty {
  color: #D9D9D9;
}

.input-sty {
  font-size: 28rpx;
  color: #555555;
  text-align: right;
}

.calendar-sty {
  z-index: 999 !important;
}

.strong-sty {
  color: #555555 !important;
}

/* 跟进打卡 */
.location-item {
  width: 702rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #EAEBEF;
  font-size: 28rpx;
  margin: 0 auto;
  padding: 30rpx 0;
}

.location-img {
  position: relative;
  margin-top: 20rpx;
  width: 160rpx;
  height: 160rpx;
  background: #F7F8FA;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-image {
  width: 50rpx;
  height: 50rpx;
}

.choose-image {
  width: 160rpx;
  height: 160rpx;
}

.location-contain {
  width: 702rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #EAEBEF;
  font-size: 28rpx;
  margin: 0 auto;
  padding: 30rpx 0rpx;
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-top {
  width: 680rpx;
  display: flex;
  align-items: center;
}

.location-name {
  max-width: 680rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #0082FC;
  font-size: 28rpx;
  margin-left: 2rpx;
}

.location-desc {
  margin-top: 8rpx;
  color: #A5A5A5;
  font-size: 24rpx;
}

.location-distance {
  color: #A5A5A5;
  font-size: 24rpx;
}

.delete-contain {
  position: absolute;
  top: 0;
  right: 0;
  width: 14px;
  height: 14px;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 0 0 0 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  font-size: 20rpx;
  transform: rotate(45deg);
}