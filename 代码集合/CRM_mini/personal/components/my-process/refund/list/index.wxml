<!--personal/components/my-process/refund/list/index.wxml-->
<view class="refund-box">
  <view class="drop-box">
    <van-dropdown-menu class="dropdown-menu" active-color="#0082FC">
      <van-dropdown-item value="{{refundStatus}}" options="{{ statusData}}" bind:change="changeProcess" />
      <van-dropdown-item value="{{chooseFee}}" options="{{ feeType }}" bind:change="changefeeType" />
      <view class="daichuliren" bindtap="allot">
        <text>{{empInfo.name}}</text>
        <text class="sanjiao"></text>
      </view>
    </van-dropdown-menu>    
  </view>
  <action-sheet hidden="{{show}}">
    <view class="query-emp">
      <view class="query-emp-head">
        <text bindtap="close">取消</text>
        <text>{{title}}</text>
        <text bindtap="confirm">确认</text>
      </view>
      <van-search bind:blur="changeSearch" class="search-sty" value="{{ keyWord }}" placeholder="请输入员工姓名关键词搜索" />
      <!-- 查询结果列表 -->
      <view class="emp-list">
        <picker-view wx:if="{{empList.length>0}}" indicator-class="indicator-sty" class="picker-sty" value="{{value}}" bindchange="changePicker">
          <picker-view-column class="pickViewColumn">
            <view class="emp-item" wx:for="{{empList}}" wx:key="index">
              <text>{{item.number}}</text>
              <text>{{item.name}}</text>
              <text>{{item.deptName}}</text>
            </view>
          </picker-view-column>
        </picker-view>
        <view wx:else class="empty-sty">
          搜索结果为空，换个关键词再试试
        </view>
      </view>
    </view>
  </action-sheet>  
  <view class="refund-list" wx:if="{{refundList.length>0}}">
    <list-item wx:for="{{refundList}}" wx:key="index" listItem="{{item}}"></list-item>    
  </view>
  <view wx:if="{{refundList.length == 0}}" class="no-more no-data">
    ------  暂无数据，请换个搜索条件试试！ ------
  </view>
  <view wx:if="{{noMore}}" class="no-more">
    ------ 我是有底线的 ------
  </view>
</view>
