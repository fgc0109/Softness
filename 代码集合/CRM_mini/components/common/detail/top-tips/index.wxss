/* components/common/detail/top-tips/index.wxss */
.cephalic {
  margin: 24rpx 24rpx 0 24rpx;
  padding: 0 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 92rpx;
}
.head-left {
  display: flex;
  align-items: center;
}
.head-left>text:nth-of-type(1) {
  color: #555555;
  font-size: 28rpx;
}
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}
.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(1) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #0989e8;
  border-radius: 50%;
  margin-right: 8rpx;
}

.head-right>text:nth-of-type(2) {
  color: #555555;
  font-size: 28rpx;
}
.color-b{
  background: #28C445 !important;
}
.color-c{
  background: #ff0000 !important;
}